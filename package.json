{
  "name": "grading-app",
  "private": true,
  "author": "Mateo Portela",
  "version": "0.9.0",
  "license": "MIT",
  "type": "module",
  "main": "electron-main.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "electron-dev": "ELECTRON_START_URL=http://localhost:5173 npx electron .",
    "electron-prod": "npm run build && npx electron .",
    "electron": "electron .",
    "electron-build": "npm run build && electron .",
    "dist": "npm run build && electron-builder"
  },
  "build": {
    "appId": "com.sushimatt.fastgradingapp",
    "productName": "Fast Grading App",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "electron-main.js",
      "package.json"
    ],
    "mac": {
    "target": "dmg",
    "icon": "public/icon.icns"
    },
    "win": {
      "target": "portable",
      "icon": "public/icon.ico"
    },
    "linux": {
      "target": "AppImage",
      "icon": "public"
    }
  },
  "dependencies": {
    "@shadcn/ui": "^0.0.4",
    "@tailwindcss/vite": "^4.1.13",
    "jszip": "^3.10.1",
    "mammoth": "^1.10.0",
    "pdfjs-dist": "^5.4.149",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "tesseract.js": "^6.0.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "@tailwindcss/postcss": "^4.1.13",
    "@types/react": "^19.1.10",
    "@types/react-dom": "^19.1.7",
    "@vitejs/plugin-react": "^5.0.0",
    "autoprefixer": "^10.4.21",
    "electron": "^28.3.3",
    "electron-builder": "^26.0.12",
    "eslint": "^9.33.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.13",
    "vite": "^7.1.2"
  }
}
